# This is Git's per-user configuration file.
[user]
	name = Ari Sweedler
	email = ari@sweedler.com
	username = arisweedler

[core]
	excludesfile = ~/.gitignore
	editor = vim

[color "diff"]
	meta = yellow black bold
	frag = magenta black bold
	old = red bold
	new = green bold

[color "status"]
	added = green black bold
	changed = yellow black bold
	untracked = red reverse bold

[pretty]
	# '%h': abbreviated commit hash
	# '%ar': author date, relative
	# '%D': ref names without the " (", ")" wrapping.
	# '%s': subject
	# '%an': author name
	mylog = "format:%C(yellow)%h %C(green)%ar %C(auto)%D %C(reset)%s %C(blue)[%aN]"
	chrislog = "format:%C(bold yellow)%d %C(reset)%C(cyan)%h %C(dim white)- %C(reset)%s %C(dim blue)(%cr) %C(dim white)<%an>%C(reset)"
	newlog = "format:%C(cyan)%h %C(green)%<(12,trunc)%ar %C(dim white)%<(12,trunc)[%an] %C(reset)%s %w(0,0,8)%C(bold red)%+d%C(reset)"

[alias]
	a = !"git add .; git s"
	alias=!"git config -l | grep ^alias | cut -c 7- | sort #"
	amend = commit --amend --reuse-message=HEAD
	cconfig=config --edit --global
	ctags = !.git/hooks/ctags
	d = diff --cached --diff-algorithm=minimal
	grepp = grep --break --heading --line-number
	hub = !"git hubd $(basename $(pwd))"
	hubd = !"git remote add origin git@github.com:AriSweedler/${1}.git; git pushu"
	l = !"git lg --graph"
	lg = log --pretty=newlog
	ls = ls-tree --full-tree -r --abbrev HEAD
	pushu = push --set-upstream origin master
	p = !"script -q /dev/null git l | head -3; git push; stty sane; echo ''"
	repo = !"basename $(git remote get-url origin) '.git'"
	s = status
	showme=!"git config -l | grep $1 | cut -c $(( ${#1} + 2 ))- | sort #"
	u = remote update
	up = !"git remote update -p; git merge --ff-only @{u}"

[push]
	default = simple

[init]
	templatedir = ~/.git_template
