#!/bin/bash

set -e
# Use AppleScript via osascript to type @code<Tab>JavaScript<Enter>
osascript <<'APPLESCRIPT'
tell application "System Events"
  -- Type @code
  keystroke "@code"
  delay 0.3

  -- Press Tab
  key code 48
  delay 0.3

  -- Type JavaScript
  keystroke "JavaScript"
  delay 0.3

  -- Press Enter
  key code 36
end tell
APPLESCRIPT
